<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Main Image Display -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="matrix" 
        android:contentDescription="@null" />
        
    <!-- Black Overlay for Dark Mode -->
    <View
        android:id="@+id/blackOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:visibility="gone" />

    <!-- Bottom Navigation Bar (Car Controls) -->
    <LinearLayout
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:background="#DD000000"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:visibility="visible">
        
        <!-- Previous Button -->
        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="64dp"
            android:layout_margin="4dp"
            android:text="⟨ PREV"
            android:textSize="14sp"
            android:textStyle="bold"
            android:backgroundTint="#1976D2"
            android:contentDescription="@string/btn_previous"/>
        
        <!-- Mode Toggle Button -->
        <Button
            android:id="@+id/btnToggleMode"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="64dp"
            android:layout_margin="4dp"
            android:text="☀ MODE"
            android:textSize="14sp"
            android:textStyle="bold"
            android:backgroundTint="#F57C00"
            android:contentDescription="@string/btn_mode"/>
        
        <!-- Next Button -->
        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="64dp"
            android:layout_margin="4dp"
            android:text="NEXT ⟩"
            android:textSize="14sp"
            android:textStyle="bold"
            android:backgroundTint="#1976D2"
            android:contentDescription="@string/btn_next"/>
        
        <!-- Config Button -->
        <Button
            android:id="@+id/btnConfig"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="64dp"
            android:layout_margin="4dp"
            android:text="⚙ CONFIG"
            android:textSize="14sp"
            android:textStyle="bold"
            android:backgroundTint="#388E3C"
            android:contentDescription="@string/btn_config"/>
    </LinearLayout>

    <!-- Configuration Panel (Hidden by default) -->
    <LinearLayout
        android:id="@+id/configPanel"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#F2000000"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:elevation="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/config_title"
            android:textColor="#FFEB3B"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:gravity="center"/>

        <!-- Button Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnSelectLocal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:text="@string/btn_local"
                android:backgroundTint="#2196F3"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:elevation="4dp"/>

            <Button
                android:id="@+id/btnScanDevice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:text="@string/btn_scan"
                android:backgroundTint="#FF9800"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:elevation="4dp"/>
        </LinearLayout>

        <!-- URL Loading Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">
            
            <EditText
                android:id="@+id/etUrl"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:hint="@string/url_hint"
                android:textColor="#FFFFFF"
                android:textColorHint="#999999"
                android:background="#33FFFFFF"
                android:padding="12dp"
                android:inputType="textUri"
                android:textSize="13sp"
                android:elevation="2dp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnLoadUrl"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="48dp"
                android:text="@string/btn_url"
                android:backgroundTint="#4CAF50"
                android:textSize="13sp"
                android:elevation="4dp"/>
        </LinearLayout>

        <!-- History Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_title"
            android:textColor="#FFEB3B"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#22FFFFFF"
            android:padding="6dp"
            android:scrollbars="vertical"
            android:elevation="2dp">
            
            <LinearLayout
                android:id="@+id/historyContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>
        
        <!-- Instructions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/instruction"
            android:textColor="#BBBBBB"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:textSize="11sp"
            android:lineSpacingMultiplier="1.3"/>

    </LinearLayout>

    <!-- Brightness Indicator (fullscreen) -->
    <LinearLayout
        android:id="@+id/brightnessIndicator"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#CC000000"
        android:visibility="gone"
        android:elevation="10dp">
        
        <TextView
            android:id="@+id/brightnessLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brightness"
            android:textColor="#FFEB3B"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>
        
        <ProgressBar
            android:id="@+id/brightnessBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:max="100"
            android:progress="50"
            android:progressTint="#4CAF50"
            android:progressBackgroundTint="#333333"/>
            
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Slide H: Mode 1 | Slide V: Mode 2"
            android:textColor="#CCCCCC"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="12dp"/>
    </LinearLayout>

    <!-- Loading Progress Indicator -->
    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminate="true"/>

</FrameLayout>