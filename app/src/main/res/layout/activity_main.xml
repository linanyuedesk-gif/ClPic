<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Main Image Display -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="matrix" 
        android:contentDescription="@null" />
        
    <!-- Black Overlay for Dark Mode -->
    <View
        android:id="@+id/blackOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:visibility="gone" />

    <!-- Configuration panel: center small window, double-tap to show -->
    <LinearLayout
        android:id="@+id/configPanel"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#F0FFFFFF"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:elevation="16dp"
        android:minWidth="300dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/config_title"
            android:textColor="#1A1A1A"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnSelectLocal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="44dp"
                android:text="@string/btn_local"
                android:backgroundTint="#2196F3"
                android:textSize="13sp"
                android:layout_marginEnd="6dp"/>

            <Button
                android:id="@+id/btnScanDevice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="44dp"
                android:text="@string/btn_scan"
                android:backgroundTint="#FF9800"
                android:textSize="13sp"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/etUrl"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:hint="@string/url_hint"
                android:textColor="#1A1A1A"
                android:textColorHint="#757575"
                android:background="#E0E0E0"
                android:padding="10dp"
                android:inputType="textUri"
                android:textSize="12sp"
                android:layout_marginEnd="6dp"/>

            <Button
                android:id="@+id/btnLoadUrl"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="40dp"
                android:text="@string/btn_url"
                android:backgroundTint="#4CAF50"
                android:textSize="12sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_title"
            android:textColor="#424242"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#E8E8E8"
            android:padding="6dp"
            android:scrollbars="vertical">

            <LinearLayout
                android:id="@+id/historyContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/instruction"
            android:textColor="#757575"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="10sp"
            android:lineSpacingMultiplier="1.2"/>

    </LinearLayout>

    <!-- Loading Progress Indicator -->
    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminate="true"/>

</FrameLayout>