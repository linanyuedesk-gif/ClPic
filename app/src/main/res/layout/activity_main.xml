<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Main Image Display -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="matrix" 
        android:contentDescription="@null" />
        
    <!-- Black Overlay for Dark Mode -->
    <View
        android:id="@+id/blackOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:visibility="gone" />

    <!-- Configuration Panel (hidden by default, shown on double-tap) -->
    <LinearLayout
        android:id="@+id/configPanel"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#F2000000"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:elevation="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/config_title"
            android:textColor="#FFEB3B"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:gravity="center"/>

        <!-- Button Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnSelectLocal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:text="@string/btn_local"
                android:backgroundTint="#2196F3"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:elevation="4dp"/>

            <Button
                android:id="@+id/btnScanDevice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:text="@string/btn_scan"
                android:backgroundTint="#FF9800"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:elevation="4dp"/>
        </LinearLayout>

        <!-- URL Loading Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/etUrl"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:hint="@string/url_hint"
                android:textColor="#FFFFFF"
                android:textColorHint="#999999"
                android:background="#33FFFFFF"
                android:padding="12dp"
                android:inputType="textUri"
                android:textSize="13sp"
                android:elevation="2dp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnLoadUrl"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="48dp"
                android:text="@string/btn_url"
                android:backgroundTint="#4CAF50"
                android:textSize="13sp"
                android:elevation="4dp"/>
        </LinearLayout>

        <!-- History Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_title"
            android:textColor="#FFEB3B"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#22FFFFFF"
            android:padding="6dp"
            android:scrollbars="vertical"
            android:elevation="2dp">

            <LinearLayout
                android:id="@+id/historyContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <!-- Instructions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/instruction"
            android:textColor="#BBBBBB"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:textSize="11sp"
            android:lineSpacingMultiplier="1.3"/>

    </LinearLayout>

    <!-- Loading Progress Indicator -->
    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminate="true"/>

</FrameLayout>